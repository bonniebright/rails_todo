<h1>Tasks</h1>
<h2> Not Done Tasks: </h2>
<ul>
  <% @not_done_tasks.each do |task| %>
    <li><a href="/tasks/<%= task.id %>"><%= task.task %></a>
        <form action"<%= task.id %>" method="post">
        <input name="_method" type ="hidden" value="patch">
        <input name=id type="hidden" value="<%= task.id %>">
        <input name ="done" type="hidden" value="true">
        <button> Mark done </button>
  </form></li>

  <% end %>
</ul>

<h2> Completed Tasks: </h2>
<ul>
  <% @done_tasks.each do |task| %>
    <li> <a href="/tasks/<%= task.id %>"><%= task.task %></a></li>
  <% end %>
</ul>

    <p><a href="tasks/new">Create a new task.</a></p>
